<MainScreen>
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Add Item'
            size_hint: (1, .15)
            on_press: root.manager.current = 'AddItems'
        Button:
            text: 'Remove Crossed-Out Items'
            size_hint: (1, .1)

<AddItems>
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: '+ Add Item'
            size: (1, .5)
            on_press: root.write_to_db()
        Button:
            text: 'Back to Shopping List'
            on_press: root.manager.current = 'MainScreen'
        TextInput:
            id: 'Item'
            multiline: False
            hint_text: 'Item'
            on_text: root.add_new_item(self.text)
        TextInput:
            id: 'Quantity'
            multiline: False
            hint_text: 'Quantity (default is 0)'
            input_filter: 'float'
            on_text: root.update_item_value('Quantity', self.text)
